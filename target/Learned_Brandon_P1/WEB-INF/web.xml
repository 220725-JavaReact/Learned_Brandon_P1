<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <welcome-file-list>
  	<welcome-file>index.html</welcome-file>
  </welcome-file-list>
  
  <servlet>
  	<servlet-name>CustomerController</servlet-name>
  	<servlet-class>com.revature.controllers.CustomerController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CustomerController</servlet-name>
  	<url-pattern>/customer</url-pattern>
  	<url-pattern>/allcustomers</url-pattern>
  	<url-pattern>/customerlogin</url-pattern>
  	<url-pattern>/createcustomer</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>EmployeeController</servlet-name>
  	<servlet-class>com.revature.controllers.EmployeeController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>EmployeeController</servlet-name>
  	<url-pattern>/employeelogin</url-pattern>
  </servlet-mapping>
 
   <servlet>
  	<servlet-name>StoreFrontController</servlet-name>
  	<servlet-class>com.revature.controllers.StoreFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>StoreFrontController</servlet-name>
  	<url-pattern>/storeselect</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>EmployeeStoreFrontController</servlet-name>
  	<servlet-class>com.revature.controllers.EmployeeStoreFrontController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>EmployeeStoreFrontController</servlet-name>
  	<url-pattern>/empstoreselect</url-pattern>
  </servlet-mapping>
  
   <servlet>
  	<servlet-name>RedirectController</servlet-name>
  	<servlet-class>com.revature.controllers.RedirectController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>RedirectController</servlet-name>
  	<url-pattern>/home</url-pattern>
  	<url-pattern>/setstore</url-pattern>
  	<url-pattern>/clearstore</url-pattern>
  	<url-pattern>/empclearstore</url-pattern>
  	<url-pattern>/addtoorder</url-pattern>
   	<url-pattern>/updatequantity</url-pattern>
  	<url-pattern>/vieworders</url-pattern>
  	<url-pattern>/viewstoreorders</url-pattern>
  	<url-pattern>/empsetstore</url-pattern>
  	
  	
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>CRUDController</servlet-name>
  	<servlet-class>com.revature.controllers.CRUDController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>CRUDController</servlet-name>
  	<url-pattern>/finalizeorder</url-pattern>
  </servlet-mapping>
  
</web-app>
